                    />
                <TextView
                    style="@style/evenrows"
                    android:text="Google, Facebook"
                    />
            </TableRow>
            <TableRow

                android:background="#284c7e">

                <TextView
                    style="@style/oddrows"
                    android:text="Snapdeal"

                    />
                <TextView
                    style="@style/oddrows"
                    android:text="Google, Facebook"
                    />
            </TableRow>
            <TableRow

                android:background="#e0ecf8">

